<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Shadow Layer -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#48000000" /> <!-- Shadow color -->
                <corners android:radius="50dp" /> <!-- Adjust the radius to change the shadow's roundness -->
            </shape>
        </item>

        <!-- Main Button Layer -->
        <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
            <shape android:shape="rectangle">
                <solid android:color="#A69090" /> <!-- Button color -->
                <corners android:radius="100dp" /> <!-- Adjust the radius to change the button's roundness -->
            </shape>
        </item>
    </layer-list>

